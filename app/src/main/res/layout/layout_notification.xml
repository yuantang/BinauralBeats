<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_bar_latest_event_content"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorWhite"
    >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/notification_main_column"
        android:layout_toRightOf="@+id/icon"
        android:layout_toLeftOf="@+id/notification_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorBlack4"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/notification_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio Recorder"
            android:textColor="@color/colorBlack6"
            android:layout_marginTop="2dp"
            android:textSize="14sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/notification_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_pause"
        android:tint="@color/colorBlack4"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:layout_marginRight="6dp"
        />

</RelativeLayout>