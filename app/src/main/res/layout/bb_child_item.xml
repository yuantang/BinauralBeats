<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/child_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/child_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text="ddddddddd"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            >
        </TextView>
        <TextView
            android:id="@+id/child_author_txt"
            android:layout_below="@+id/child_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@mipmap/type"
            android:drawablePadding="4dp"
            >
        </TextView>
        <TextView
            android:layout_below="@+id/child_name_txt"
            android:layout_toRightOf="@+id/child_author_txt"
            android:id="@+id/child_length_txt"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="1h30m"
            android:drawablePadding="4dp"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@mipmap/time"
            >
        </TextView>

        <TextView
            android:layout_below="@+id/child_length_txt"
            android:id="@+id/child_desc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack9"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:text="ddddddddd"
            android:lineSpacingMultiplier="1.2"
            >
        </TextView>
    </RelativeLayout>
</android.support.v7.widget.CardView>
